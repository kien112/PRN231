@using ScoreManagementClient.Dtos.Common;
@using ScoreManagementClient.Dtos.SubjectDto;
@model ResponseData<SearchSubject>

@{
}

<div class="">
    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Subjects</h6>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Subject Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Active</th>
                        <th scope="col">CreatedAt</th>
                        <th scope="col">Creator</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model?.Data?.Result)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.Active</td>
                            <td>@item.CreatedAt</td>
                            <td>@item.Creator?.FullName</td>
                            <td>
                                <button type="button" class="btn btn-warning m-2">Edit</button>
                                <button type="button" class="btn btn-danger m-2">Delete</button>
                            </td>
                        </tr>
                    }
                    
                </tbody>
            </table>
        </div>
    </div>
</div>


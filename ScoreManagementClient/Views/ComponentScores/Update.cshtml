<div class="col-sm-12 col-xl-6">
    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Update Component Score</h6>
        <input id="Id" value="@ViewBag.Id" hidden />
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="ComponentName"
                placeholder="enter subject name">
            <label for="ComponentName">Component Name</label>
            <p id="NameError" class="text-danger"></p>
        </div>
        <div class="form-floating mb-3">
            <input type="number" class="form-control" id="Percent"
                placeholder="enter subject name">
            <label for="Percent">Percent</label>
            <p id="PercentError" class="text-danger"></p>
        </div>
        <div class="form-floating mb-3">
            <textarea class="form-control" placeholder="Description"
                id="Description" style="height: 150px;"></textarea>
            <label for="floatingTextarea">Description</label>
            <p id="DescriptionError" class="text-danger mt-2"></p>
        </div>
        <div class="form-floating mb-3">
            <select class="form-select" id="SubjectId"
                aria-label="Select Item">
            </select>
            <label for="SubjectId">Subject</label>
            <p id="SubjectIdError" class="text-danger mt-2"></p>
        </div>
        <div class="form-floating mb-3">
            <select class="form-select" id="Active"
                aria-label="Select Item">
                <option value="1">Active</option>
                <option value="0">InActive</option>
            </select>
            <label for="Active">Active</label>
        </div>
        <div class="form-floating">
            <p id="ErrorMessage" class="text-danger"></p>
            <button id="btnUpdate" class="btn btn-primary" type="submit">Update</button>
            <a class="btn btn-outline-primary" href="/componentscores">Back</a>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/assets/js/component-score/update-component.js"></script>